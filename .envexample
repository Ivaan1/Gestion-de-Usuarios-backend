# Configuración del servidor
PORT=5000
PUBLIC_URL=http://localhost:${PORT}

# Base de datos
DB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/database-name?retryWrites=true&w=majority

# Autenticación
SECRET_JWT=your_jwt_secret_here

# Configuración de email (Gmail)
EMAIL=your-email@gmail.com
CLIENT_ID=your-google-client-id.apps.googleusercontent.com
CLIENT_SECRET=your-google-client-secret
REFRESH_TOKEN=your-google-refresh-token
REDIRECT_URI=https://developers.google.com/oauthplayground

# Pinata IPFS
PINATA_GATEWAY_URL=your-gateway-name.mypinata.cloud
PINATA_KEY=your-pinata-api-key
PINATA_SECRET=your-pinata-secret-key
PINATA_JWT=your-pinata-jwt-token

# Notificaciones
SLACK_WEBHOOK=https://hooks.slack.com/services/your-slack-webhook-path